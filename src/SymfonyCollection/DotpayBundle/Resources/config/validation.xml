<?xml version="1.0" encoding="UTF-8" ?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SymfonyCollection\DotpayBundle\Entity\PaymentRequest">
        <!--
            PaymentRequest::apiVersion
        -->
        <property name="apiVersion">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>dev</value>
                </option>
            </constraint>
        </property>
        <!--
             PaymentRequest::merchantId
        -->
        <property name="merchantId">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">integer</option>
            </constraint>
            <constraint name="Range">
                <option name="min">1</option>
                <option name="max">999999</option>
            </constraint>
        </property>
        <!--
            PaymentRequest::amount
        -->
        <property name="amount">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">10</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0.1</option>
                <option name="max">9999999.99</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::currency
        -->
        <property name="currency">
            <constraint name="NotBlank"/>
            <constraint name="Choice">
                <option name="choices">
                    <value>PLN</value>
                    <value>EUR</value>
                    <value>USD</value>
                    <value>GBP</value>
                    <value>JPY</value>
                    <value>CZK</value>
                    <value>SEK</value>
                </option>
            </constraint>
        </property>
        <!--
             PaymentRequest::description
        -->
        <property name="description">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::lang
        -->
        <property name="lang">
            <constraint name="Choice">
                <option name="choices">
                    <value>pl</value>
                    <value>en</value>
                    <value>de</value>
                    <value>it</value>
                    <value>fr</value>
                    <value>es</value>
                    <value>cz</value>
                    <value>ru</value>
                    <value>bg</value>
                </option>
            </constraint>
        </property>
        <!--
             PaymentRequest::channel
        -->
        <!--property name="channel">
        </property!-->
        <!--
             PaymentRequest::chLock
        -->
        <property name="chLock">
            <constraint name="Type">
                <option name="type">bool</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::chanelGroups
        -->
        <!--property name="channelGroups">
        </property!-->
        <!--
             PaymentRequest::url
        -->
        <property name="url">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
            <constraint name="Url"/>
        </property>
        <!--
             PaymentRequest::type
        -->
        <property name="type">
            <constraint name="Type">
                <option name="type">int</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">4</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::type
        -->
        <property name="buttontext">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">4</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::urlc
        -->
        <property name="urlc">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::control
        -->
        <property name="control">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::firstName
        -->
        <property name="firstname">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::lastName
        -->
        <property name="lastname">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::email
        -->
        <property name="email">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
            <constraint name="Email"/>
        </property>
        <!--
            PaymentRequest::street
        -->
        <property name="street">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::streetN1
        -->
        <property name="streetN1">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">30</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::streetN2
        -->
        <property name="streetN2">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::state
        -->
        <property name="state">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::addr3
        -->
        <property name="addr3">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">30</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::city
        -->
        <property name="city">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::postcode
        -->
        <property name="postcode">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">20</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::phone
        -->
        <property name="phone">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">20</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::country
        -->
        <property name="country">
            <constraint name="Country" />
        </property>
        <!--
             PaymentRequest::pInfo
        -->
        <property name="pInfo">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">300</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::pEmail
        -->
        <property name="pEmail">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::blickCode
        -->
        <property name="blickCode">
            <constraint name="Type">
                <option name="type">digit</option>
            </constraint>
            <constraint name="Length">
                <option name="min">6</option>
                <option name="max">6</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::errorCode
        -->
        <property name="errorCode">
            <constraint name="Valid" />
        </property>
    </class>

    <!--
        SymfonyCollection\DotpayBundle\Entity\ChannelCategory
    -->
    <class name="SymfonyCollection\DotpayBundle\Entity\ChannelCategory">
        <!--
            ChannelCategory::name
        -->
        <property name="name">
            <constraint name="NotBlank"></constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>CREDIT_CARDS</value>
                    <value>E_TRANSFERS</value>
                    <value>ONLINE_TRANSFERS</value>
                    <value>CASH_PAYMENTS</value>
                    <value>MOBILE_PAYMENTS</value>
                    <value>E_WALLET_AND_VOUCHERS</value>
                    <value>ONLINE_INSTALLMENTS</value>
                    <value>DEFERRED_PAYMENTS</value>
                    <value>OTHERS</value>
                </option>
            </constraint>
        </property>
    </class>


    <!--
        SymfonyCollection\DotpayBundle\Entity\Channel
    -->
    <class name="SymfonyCollection\DotpayBundle\Entity\Channel">
        <!--
            Channel::number
        -->
        <property name="number">
            <constraint name="NotBlank"></constraint>
            <constraint name="Type">
                <option name="type">integer</option>
            </constraint>
        </property>
        <!--
             Channel::channelCategory
         -->
        <property name="channelCategory">
            <constraint name="NotNull"></constraint>
            <constraint name="Valid" />
        </property>
        <!--
             Channel::name
         -->
        <property name="name">
            <constraint name="NotBlank"></constraint>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             Channel::provider
         -->
        <property name="provider">
            <constraint name="NotBlank"></constraint>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <!--
             Channel::logotype
         -->
        <property name="logotype">
            <constraint name="NotBlank"></constraint>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">255</option>
            </constraint>
        </property>
    </class>

    <!--
        SymfonyCollection\DotpayBundle\Entity\OperationType
    -->
    <class name="SymfonyCollection\DotpayBundle\Entity\OperationType">
        <!--
            OperationType::name
        -->
        <property name="name">
            <constraint name="NotBlank"></constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>payment</value>
                    <value>payment_multimerchant_child</value>
                    <value>payment_multimerchant_parent</value>
                    <value>refund</value>
                    <value>payout</value>
                    <value>release_rollback</value>
                    <value>unidentified_payment</value>
                    <value>complaint</value>
                </option>
            </constraint>
        </property>
    </class>

    <!--
        SymfonyCollection\DotpayBundle\Entity\OperationStatus
    -->
    <class name="SymfonyCollection\DotpayBundle\Entity\OperationStatus">
        <!--
            OperationStatus::name
        -->
        <property name="name">
            <constraint name="NotBlank"></constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>new</value>
                    <value>processing</value>
                    <value>payment_multimerchant_parent</value>
                    <value>completed</value>
                    <value>rejected</value>
                    <value>processing_realization_waiting</value>
                    <value>processing_realization</value>
                </option>
            </constraint>
        </property>
    </class>

    <!--
        SymfonyCollection\DotpayBundle\Entity\ErrorCode
    -->
    <class name="SymfonyCollection\DotpayBundle\Entity\ErrorCode">
        <!--
            ErrorCode::name
        -->
        <property name="name">
            <constraint name="NotBlank"></constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>PAYMENT_EXPIRED</value>
                    <value>UNKNOWN_CHANNEL</value>
                    <value>DISABLED_CHANNEL</value>
                    <value>BLOCKED_ACCOUNT</value>
                    <value>INACTIVE_SELLER</value>
                    <value>AMOUNT_TOO_HIGH</value>
                    <value>BAD_DATA_FORMAT</value>
                </option>
            </constraint>
        </property>
    </class>

    <!--
        SymfonyCollection\DotpayBundle\Entity\PaymentStatus
    -->
    <class name="SymfonyCollection\DotpayBundle\Entity\PaymentStatus">

        <constraint name="SymfonyCollection\DotpayBundle\Validation\Constraints\OperationStatusChangedConstraint"/>
        <!--
            PaymentStatus::merchantId
        -->
        <property name="merchantId">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">integer</option>
            </constraint>
            <constraint name="Range">
                <option name="min">1</option>
                <option name="max">999999</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationNumber
        -->
        <property name="operationNumber">
            <constraint name="NotBlank"/>
            <constraint name="Regex">
                <option name="pattern">/^M[0-9]{4,5}-[0-9]{4,5}$/</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationType
        -->
        <property name="operationType">
            <constraint name="NotNull"/>
            <constraint name="Valid" />
        </property>
        <!--
            PaymentStatus::operationType
        -->
        <property name="operationStatus">
            <constraint name="NotNull"/>
            <constraint name="Valid" />
        </property>
        <!--
            PaymentStatus::operationAmount
        -->
        <property name="operationAmount">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">10</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0.1</option>
                <option name="max">9999999.99</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationCurrency
        -->
        <property name="operationCurrency">
            <constraint name="NotBlank"/>
            <constraint name="Currency" />
        </property>
        <!--
            PaymentStatus::operationWithdrawalAmount
        -->
        <property name="operationWithdrawalAmount">
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">10</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0.1</option>
                <option name="max">9999999.99</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationCommissionAmount
        -->
        <property name="operationCommissionAmount">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">10</option>
            </constraint>
            <constraint name="LessThan">
                <option name="value">0</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationOriginalAmount
        -->
        <property name="operationOriginalAmount">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">10</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0.1</option>
                <option name="max">9999999.99</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationOriginalCurrency
        -->
        <property name="operationOriginalCurrency">
            <constraint name="NotBlank"/>
            <constraint name="Choice">
                <option name="choices">
                    <value>PLN</value>
                    <value>EUR</value>
                    <value>USD</value>
                    <value>GBP</value>
                    <value>JPY</value>
                    <value>CZK</value>
                    <value>SEK</value>
                </option>
            </constraint>
        </property>
        <!--
            PaymentStatus::operationDatetime
        -->
        <property name="operationDatetime">
            <constraint name="NotNull"/>
            <constraint name="DateTime" />
        </property>
        <!--
            PaymentStatus::operationRelatedNumber
        -->
        <property name="operationRelatedNumber">
            <constraint name="NotBlank"/>
            <constraint name="Regex">
                <option name="pattern">/^M[0-9]{4,5}-[0-9]{4,5}$/</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::control
        -->
        <property name="control">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::description
        -->
        <property name="description">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <!--
            PaymentStatus::email
        -->
        <property name="email">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
            <constraint name="Email"/>
        </property>
        <!--
             PaymentStatus::pInfo
        -->
        <property name="pInfo">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">300</option>
            </constraint>
        </property>
        <!--
             PaymentStatus::pEmail
        -->
        <property name="pEmail">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>

        <property name="channel">
            <constraint name="NotBlank"/>
        </property>
        <property name="channelCountry">
            <constraint name="NotBlank"/>
        </property>
        <property name="geoipCountry">
            <constraint name="NotBlank"/>
        </property>
        <property name="signature">
            <constraint name="NotBlank"/>
        </property>
    </class>
</constraint-mapping>