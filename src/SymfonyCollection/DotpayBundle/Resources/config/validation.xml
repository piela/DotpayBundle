<?xml version="1.0" encoding="UTF-8" ?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SymfonyCollection\DotpayBundle\Entity\PaymentRequest">
        <!--
            PaymentRequest::apiVersion
        -->
        <property name="apiVersion">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>dev</value>
                </option>
            </constraint>
        </property>
        <!--
             PaymentRequest::merchantId
        -->
        <property name="merchantId">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">integer</option>
            </constraint>
            <constraint name="Range">
                <option name="min">1</option>
                <option name="max">999999</option>
            </constraint>
        </property>
        <!--
            PaymentRequest::amount
        -->
        <property name="amount">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">10</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0.1</option>
                <option name="max">9999999.99</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::currency
        -->
        <property name="currency">
            <constraint name="NotBlank"/>
            <constraint name="Choice">
                <option name="choices">
                    <value>PLN</value>
                    <value>EUR</value>
                    <value>USD</value>
                    <value>GBP</value>
                    <value>JPY</value>
                    <value>CZK</value>
                    <value>SEK</value>
                </option>
            </constraint>
        </property>
        <!--
             PaymentRequest::description
        -->
        <property name="description">
            <constraint name="NotBlank"/>
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::lang
        -->
        <property name="lang">
            <constraint name="Choice">
                <option name="choices">
                    <value>pl</value>
                    <value>en</value>
                    <value>de</value>
                    <value>it</value>
                    <value>fr</value>
                    <value>es</value>
                    <value>cz</value>
                    <value>ru</value>
                    <value>bg</value>
                </option>
            </constraint>
        </property>
        <!--
             PaymentRequest::channel
        -->
        <!--property name="channel">
        </property!-->
        <!--
             PaymentRequest::chLock
        -->
        <property name="chLock">
            <constraint name="Type">
                <option name="type">bool</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::chanelGroups
        -->
        <!--property name="channelGroups">
        </property!-->
        <!--
             PaymentRequest::url
        -->
        <property name="url">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
            <constraint name="Url"/>
        </property>
        <!--
             PaymentRequest::type
        -->
        <property name="type">
            <constraint name="Type">
                <option name="type">int</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">4</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::type
        -->
        <property name="buttontext">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">4</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::urlc
        -->
        <property name="urlc">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::control
        -->
        <property name="control">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">1000</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::firstName
        -->
        <property name="firstname">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::lastName
        -->
        <property name="lastname">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::email
        -->
        <property name="email">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
            <constraint name="Email"/>
        </property>
        <!--
            PaymentRequest::street
        -->
        <property name="street">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::streetN1
        -->
        <property name="streetN1">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">30</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::streetN2
        -->
        <property name="streetN2">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::state
        -->
        <property name="state">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::addr3
        -->
        <property name="addr3">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">30</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::city
        -->
        <property name="city">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::postcode
        -->
        <property name="postcode">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">20</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::phone
        -->
        <property name="phone">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">20</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::country
        -->
        <property name="country">
            <constraint name="Country" />
        </property>
        <!--
             PaymentRequest::pInfo
        -->
        <property name="pInfo">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">300</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::pEmail
        -->
        <property name="pEmail">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <!--
             PaymentRequest::errorCode
        -->
        <property name="errorCode">
            <constraint name="Type">
                <option name="type">string</option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
            </constraint>
        </property>
    </class>

    <class name="SymfonyCollection\DotpayBundle\Entity\PaymentStatus">
        <constraint name="SymfonyCollection\DotpayBundle\Validator\CheckSumConstraint"/>
        <property name="merchantId">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationNumber">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationType">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationStatus">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationCurrency">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationWithdrawalAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationCommissionAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationOriginalAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationOriginalCurrency">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationDatetime">
            <constraint name="NotNull"/>
        </property>
        <property name="operationRelatedNumber">
            <constraint name="NotBlank"/>
        </property>
        <property name="control">
            <constraint name="NotBlank"/>
        </property>
        <property name="description">
            <constraint name="NotBlank"/>
        </property>
        <property name="email">
            <constraint name="NotBlank"/>
        </property>
        <property name="pInfo">
            <constraint name="NotBlank"/>
        </property>
        <property name="pEmail">
            <constraint name="NotBlank"/>
        </property>
        <property name="channel">
            <constraint name="NotBlank"/>
        </property>
        <property name="channelCountry">
            <constraint name="NotBlank"/>
        </property>
        <property name="geoipCountry">
            <constraint name="NotBlank"/>
        </property>
        <property name="signature">
            <constraint name="NotBlank"/>
        </property>
    </class>
</constraint-mapping>