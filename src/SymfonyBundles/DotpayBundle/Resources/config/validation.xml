<?xml version="1.0" encoding="UTF-8" ?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SymfonyBundles\DotpayBundle\Entity\PaymentRequest">
        <property name="apiVersion">
            <constraint name="NotBlank"/>
        </property>
        <property name="merchantId">
            <constraint name="NotBlank"/>
        </property>
        <property name="amount">
            <constraint name="NotBlank"/>
        </property>
        <property name="currency">
            <constraint name="NotBlank"/>
        </property>
        <property name="description">
            <constraint name="NotBlank"/>
        </property>
        <property name="lang">
            <constraint name="NotBlank"/>
        </property>
        <property name="channel">
            <constraint name="NotBlank"/>
        </property>
        <property name="chLock">
            <constraint name="NotBlank"/>
        </property>
        <property name="url">
            <constraint name="NotBlank"/>
        </property>
        <property name="type">
            <constraint name="NotBlank"/>
        </property>
        <property name="buttontext">
            <constraint name="NotBlank"/>
        </property>
        <property name="urlc">
            <constraint name="NotBlank"/>
        </property>
        <property name="control">
            <constraint name="NotBlank"/>
        </property>
        <property name="firstname">
            <constraint name="NotBlank"/>
        </property>
        <property name="lastname">
            <constraint name="NotBlank"/>
        </property>
        <property name="email">
            <constraint name="NotBlank"/>
        </property>
        <property name="street">
            <constraint name="NotBlank"/>
        </property>
        <property name="streetN1">
            <constraint name="NotBlank"/>
        </property>
        <property name="streetN2">
            <constraint name="NotBlank"/>
        </property>
        <property name="state">
            <constraint name="NotBlank"/>
        </property>
        <property name="addr3">
            <constraint name="NotBlank"/>
        </property>
        <property name="city">
            <constraint name="NotBlank"/>
        </property>
        <property name="postcode">
            <constraint name="NotBlank"/>
        </property>
        <property name="phone">
            <constraint name="NotBlank"/>
        </property>
        <property name="country">
            <constraint name="NotBlank"/>
        </property>
        <property name="pInfo">
            <constraint name="NotBlank"/>
        </property>
        <property name="pEmail">
            <constraint name="NotBlank"/>
        </property>
        <property name="errorCode">
            <constraint name="NotBlank"/>
        </property>
    </class>

    <class name="SymfonyBundles\DotpayBundle\Entity\PaymentStatus">
        <property name="merchantId">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationNumber">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationType">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationStatus">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationCurrency">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationWithdrawalAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationCommissionAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationOriginalAmount">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationOriginalCurrency">
            <constraint name="NotBlank"/>
        </property>
        <property name="operationDatetime">
            <constraint name="NotNull"/>
        </property>
        <property name="operationRelatedNumber">
            <constraint name="NotBlank"/>
        </property>
        <property name="control">
            <constraint name="NotBlank"/>
        </property>
        <property name="description">
            <constraint name="NotBlank"/>
        </property>
        <property name="email">
            <constraint name="NotBlank"/>
        </property>
        <property name="pInfo">
            <constraint name="NotBlank"/>
        </property>
        <property name="pEmail">
            <constraint name="NotBlank"/>
        </property>
        <property name="channel">
            <constraint name="NotBlank"/>
        </property>
        <property name="channelCountry">
            <constraint name="NotBlank"/>
        </property>
        <property name="geoipCountry">
            <constraint name="NotBlank"/>
        </property>
        <property name="signature">
            <constraint name="NotBlank"/>
        </property>
    </class>
</constraint-mapping>